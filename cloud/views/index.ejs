    <script>
        // DOM Elements
        const uploadArea = document.getElementById('uploadArea');
        const fileInput = document.getElementById('pdfFile');
        const selectedFile = document.getElementById('selectedFile');
        const fileName = document.getElementById('fileName');
        const fileSize = document.getElementById('fileSize');
        const fileDate = document.getElementById('fileDate');
        const removeFileBtn = document.getElementById('removeFile');
        const uploadForm = document.getElementById('uploadForm');
        const submitBtn = document.getElementById('submitBtn');
        const refreshBtn = document.getElementById('refreshBtn');
        const jobsList = document.getElementById('jobsList');
        const noJobs = document.getElementById('noJobs');
        const notification = document.getElementById('notification');
        const notificationTitle = document.getElementById('notificationTitle');
        const notificationMessage = document.getElementById('notificationMessage');
        const notificationIcon = document.getElementById('notificationIcon');

        // Socket.IO connection
        const socket = io();

        // Upload area click
        uploadArea.addEventListener('click', () => {
            fileInput.click();
        });

        // File selection
        fileInput.addEventListener('change', (e) => {
            if (e.target.files.length > 0) {
                handleFileSelect(e.target.files[0]);
            }
        });

        // Remove selected file
        removeFileBtn.addEventListener('click', () => {
            fileInput.value = '';
            selectedFile.classList.remove('show');
            showNotification('File removed', 'File selection cleared', 'info');
        });

        // Handle file selection
        function handleFileSelect(file) {
            if (file.type !== 'application/pdf') {
                showNotification('Invalid file type', 'Please select a PDF file', 'error');
                return;
            }

            if (file.size > 10 * 1024 * 1024) {
                showNotification('File too large', 'Maximum file size is 10MB', 'error');
                return;
            }

            fileName.textContent = file.name;
            fileSize.textContent = formatFileSize(file.size);
            fileDate.textContent = new Date(file.lastModified).toLocaleDateString();
            selectedFile.classList.add('show');
            
            showNotification('File selected', `${file.name} ready for printing`, 'success');
        }

        // Format file size
        function formatFileSize(bytes) {
            if (bytes === 0) return '0 Bytes';
            const k = 1024;
            const sizes = ['Bytes', 'KB', 'MB', 'GB'];
            const i = Math.floor(Math.log(bytes) / Math.log(k));
            return parseFloat((bytes / Math.pow(k, i)).toFixed(1)) + ' ' + sizes[i];
        }

        // Drag and drop
        uploadArea.addEventListener('dragover', (e) => {
            e.preventDefault();
            uploadArea.classList.add('drag-over');
        });

        uploadArea.addEventListener('dragleave', () => {
            uploadArea.classList.remove('drag-over');
        });

        uploadArea.addEventListener('drop', (e) => {
            e.preventDefault();
            uploadArea.classList.remove('drag-over');
            
            if (e.dataTransfer.files.length > 0) {
                handleFileSelect(e.dataTransfer.files[0]);
                fileInput.files = e.dataTransfer.files;
            }
        });

        // Form submission
        uploadForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            
            if (!fileInput.files.length) {
                showNotification('No file selected', 'Please select a PDF file to print', 'error');
                return;
            }

            const printerName = document.getElementById('printerName').value;
            if (!printerName) {
                showNotification('Printer required', 'Please select a printer', 'error');
                return;
            }

            submitBtn.disabled = true;
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Processing...';

            try {
                const formData = new FormData(uploadForm);
                const response = await fetch('/upload', {
                    method: 'POST',
                    body: formData
                });

                const data = await response.json();

                if (data.success) {
                    showNotification(
                        'Print job submitted',
                        `Document sent to ${printerName}<br>Job ID: ${data.jobId}`,
                        'success'
                    );
                    
                    uploadForm.reset();
                    selectedFile.classList.remove('show');
                    loadJobs();
                    updateStats();
                    
                    // Simulate new job appearing in list
                    setTimeout(() => {
                        addSampleJob(data.jobId, fileInput.files[0].name, printerName);
                    }, 1000);
                } else {
                    showNotification('Print failed', data.error || 'Unknown error occurred', 'error');
                }
            } catch (error) {
                showNotification('Network error', 'Please check your connection and try again', 'error');
            } finally {
                submitBtn.disabled = false;
                submitBtn.innerHTML = '<i class="fas fa-paper-plane"></i> Send to Print';
            }
        });

        // Show notification
        function showNotification(title, message, type) {
            notificationTitle.textContent = title;
            notificationMessage.innerHTML = message;
            
            notification.className = 'notification';
            notification.classList.add(type);
            
            // Set icon based on type
            const icon = notificationIcon.querySelector('i');
            icon.className = type === 'success' ? 'fas fa-check-circle' :
                            type === 'error' ? 'fas fa-exclamation-circle' :
                            'fas fa-info-circle';
            
            notification.classList.add('show');
            
            setTimeout(() => {
                notification.classList.remove('show');
            }, 5000);
        }

        // Load print jobs
        async function loadJobs() {
            try {
                const response = await fetch('/api/jobs');
                const jobs = await response.json();

                if (jobs.length === 0) {
                    jobsList.innerHTML = '';
                    noJobs.style.display = 'flex';
                    return;
                }

                noJobs.style.display = 'none';
                jobsList.innerHTML = jobs.map(job => createJobCard(job)).join('');
            } catch (error) {
                console.error('Failed to load jobs:', error);
            }
        }

        // Create job card HTML
        function createJobCard(job) {
            const statusClass = {
                'completed': 'status-success',
                'pending': 'status-pending',
                'processing': 'status-processing',
                'failed': 'status-error'
            }[job.status] || 'status-pending';

            const statusText = {
                'completed': 'Completed',
                'pending': 'Pending',
                'processing': 'Printing',
                'failed': 'Failed'
            }[job.status] || 'Pending';

            const timeAgo = formatTimeAgo(job.uploadedAt);

            return `
                <div class="job-card">
                    <div class="job-header">
                        <div>
                            <div class="job-title">${job.originalName}</div>
                            <div class="job-time">${timeAgo}</div>
                        </div>

                    </div>
                    <div class="job-details">
                        <span class="job-detail">
                            <i class="fas fa-print" style="color: var(--gray);"></i>
                            ${job.printerName}
                        </span>
                            <span class="job-status ${statusClass}">${statusText}</span>
                    </div>
                </div>
            `;
        }

        // Add sample job (for demo)
        function addSampleJob(jobId, fileName, printerName) {
            const job = {
                jobId,
                originalName: fileName,
                printerName,
                status: 'processing',
                uploadedAt: new Date().toISOString(),
                copies: document.getElementById('copies').value || 1
            };

            const jobCard = createJobCard(job);
            
            if (noJobs.style.display !== 'none') {
                jobsList.innerHTML = jobCard;
                noJobs.style.display = 'none';
            } else {
                jobsList.insertAdjacentHTML('afterbegin', jobCard);
            }

            // Simulate status changes
            setTimeout(() => {
                updateJobStatus(jobId, 'completed');
            }, 3000);
        }

        // Update job status
        function updateJobStatus(jobId, newStatus) {
            const jobCards = jobsList.querySelectorAll('.job-card');
            jobCards.forEach(card => {
                const title = card.querySelector('.job-title').textContent;
                if (title.includes(jobId) || jobId.includes('sample')) {
                    const statusEl = card.querySelector('.job-status');
                    statusEl.className = `job-status status-${newStatus}`;
                    statusEl.textContent = newStatus === 'completed' ? 'Completed' :
                                          newStatus === 'failed' ? 'Failed' :
                                          newStatus === 'processing' ? 'Printing' : 'Pending';
                }
            });
        }

        // Format time ago
        function formatTimeAgo(timestamp) {
            const date = new Date(timestamp);
            const now = new Date();
            const diffMs = now - date;
            const diffMins = Math.floor(diffMs / 60000);
            const diffHours = Math.floor(diffMs / 3600000);
            const diffDays = Math.floor(diffMs / 86400000);

            if (diffMins < 1) return 'Just now';
            if (diffMins < 60) return `${diffMins}m ago`;
            if (diffHours < 24) return `${diffHours}h ago`;
            if (diffDays < 7) return `${diffDays}d ago`;
            return date.toLocaleDateString();
        }

        // Update statistics
        function updateStats() {
            // Simulate API call
            setTimeout(() => {
                const total = parseInt(totalJobs.textContent.replace(',', ''));
                const active = parseInt(activeJobs.textContent);
                
                totalJobs.textContent = (total + 1).toLocaleString();
                activeJobs.textContent = Math.min(active + 1, 10);
                
                // Update success rate (slight random variation for demo)
                const currentRate = parseFloat(successRate.textContent);
                const newRate = Math.min(99.8, currentRate + (Math.random() - 0.5) * 0.2);
                successRate.textContent = newRate.toFixed(1) + '%';
            }, 500);
        }

        // Refresh button
        refreshBtn.addEventListener('click', () => {
            loadJobs();
            updateStats();
            showNotification('Refreshed', 'Print jobs and statistics updated', 'success');
        });

        // Socket.IO listeners
        socket.on('new-print-job', (data) => {
            console.log('New print job:', data);
            loadJobs();
            updateStats();
        });

        socket.on('print-job-updated', (data) => {
            console.log('Print job updated:', data);
            updateJobStatus(data.jobId, data.status);
            updateStats();
        });

        // Initial load
        loadJobs();

        // Auto-refresh every 30 seconds
        setInterval(loadJobs, 30000);

        // Initialize with sample data for demo
        setTimeout(() => {
            if (jobsList.children.length === 0) {
                const sampleJobs = [
                    {
                        jobId: 'JOB-001',
                        originalName: 'Quarterly_Report.pdf',
                        printerName: 'Office Printer 01',
                        status: 'completed',
                        uploadedAt: new Date(Date.now() - 3600000).toISOString(),
                        copies: 2
                    },
                    {
                        jobId: 'JOB-002',
                        originalName: 'Client_Presentation.pdf',
                        printerName: 'Color Printer',
                        status: 'processing',
                        uploadedAt: new Date(Date.now() - 1800000).toISOString(),
                        copies: 1
                    }
                ];

                sampleJobs.forEach(job => {
                    jobsList.innerHTML += createJobCard(job);
                });

                if (sampleJobs.length > 0) {
                    noJobs.style.display = 'none';
                }
            }
        }, 1000);
    </script>
