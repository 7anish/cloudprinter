            color: var(--gray);
        }

        .job-status {
            padding: 0.20rem 0.50rem;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 600;
        }

        .status-success {
            background: #d1fae5;
            color: var(--success);
        }

        .status-pending {
            background: #fef3c7;
            color: var(--warning);
        }

        .status-processing {
            background: #dbeafe;
            color: var(--primary);
        }

        .status-error {
            background: #fee2e2;
            color: var(--error);
        }

        .job-details {
            display: flex;
            gap: 1rem;
            font-size: 0.875rem;
            color: var(--secondary);
        }

        .job-detail {
            display: flex;
            align-items: center;
            gap: 4px;
        }

        .no-jobs {
            flex: 1;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            color: var(--gray);
            padding: 2rem;
            text-align: center;
        }

        .no-jobs i {
            font-size: 3rem;
            margin-bottom: 1rem;
            opacity: 0.5;
        }

        /* Notifications */
        .notification {
            position: fixed;
            top: 2rem;
            right: 2rem;
            padding: 1rem 1.5rem;
            border-radius: 8px;
            background: var(--card-bg);
            border-left: 4px solid var(--primary);
            box-shadow: var(--shadow-lg);
            display: flex;
            align-items: center;
            gap: 1rem;
            transform: translateX(400px);
            transition: transform 0.3s;
            z-index: 1000;
            max-width: 350px;
        }

        .notification.show {
            transform: translateX(0);
        }

        .notification.success {
            border-left-color: var(--success);
        }

        .notification.error {
            border-left-color: var(--error);
        }

        .notification-icon {
            font-size: 1.25rem;
        }

        /* Responsive Design */
        @media (max-width: 1200px) {
            .app-container {
                flex-direction: column;
            }
            
            .sidebar {
                flex: none;
                width: 100%;
                border-right: none;
                border-bottom: 1px solid var(--border);
            }
            
            .nav-menu {
                display: flex;
                overflow-x: auto;
                padding: 1rem 0;
            }
            
            .nav-item {
                flex: 0 0 auto;
                border-left: none;
                border-bottom: 3px solid transparent;
            }
            
            .nav-item.active,
            .nav-item:hover {
                border-left: none;
                border-bottom-color: var(--primary);
            }
        }

        @media (max-width: 1024px) {
            .content-layout {
                flex-direction: column;
            }
            
            .jobs-section {
                flex: none;
            }
        }

        @media (max-width: 768px) {
            .main-content {
                padding: 1.5rem;
            }
            
            .stats-grid {
                flex-direction: column;
            }
            
            .form-row {
                flex-direction: column;
                gap: 1rem;
            }
            
            .header {
                flex-direction: column;
                align-items: flex-start;
                gap: 1rem;
            }

            .content-layout{
                padding: 0 ;
            }
        }

        /* Custom Scrollbar */
        ::-webkit-scrollbar {
            width: 8px;
        }

        ::-webkit-scrollbar-track {
            background: #f1f1f1;
            border-radius: 4px;
        }

        ::-webkit-scrollbar-thumb {
            background: var(--gray);
            border-radius: 4px;
        }

        ::-webkit-scrollbar-thumb:hover {
            background: var(--secondary);
        }
    </style>
</head>
